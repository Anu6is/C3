﻿@if (When && Expression is true)
{
    @TrueContent
}
else if (When)
{
    @FalseContent
}

@code {
    [EditorRequired]
    [Parameter] 
    public required bool Expression { get; set; }

    [EditorRequired]
    [Parameter] 
    public required RenderFragment TrueContent { get; set; }

    [Parameter] 
    public RenderFragment? FalseContent { get; set; }

    [Parameter]
    public bool When { get; set; } = true;
}
