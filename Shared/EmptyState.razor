<MudPaper Class="pa-8 d-flex flex-column align-center" Elevation="0">
    <MudIcon Icon="@Icon" Size="Size.Large" Color="Color.Default" Class="mb-4" Style="font-size: 4rem; opacity: 0.3;" />
    <MudText Typo="Typo.h5" Align="Align.Center" Class="mb-2">
        @Title
    </MudText>
    <MudText Typo="Typo.body1" Align="Align.Center" Color="Color.Secondary" Class="mb-4" Style="max-width: 400px;">
        @Message
    </MudText>
    @if (!string.IsNullOrEmpty(ActionText) && OnAction.HasDelegate)
    {
        <MudButton Variant="Variant.Filled" Color="Color.Primary"
                   OnClick="OnAction" StartIcon="@ActionIcon">
            @ActionText
        </MudButton>
    }
</MudPaper>

@code {
    [Parameter] public string? Icon { get; set; } = Icons.Material.Filled.SearchOff;
    [Parameter] public string? Title { get; set; } = "No results found";
    [Parameter] public string? Message { get; set; }
    [Parameter] public string? ActionText { get; set; }
    [Parameter] public string? ActionIcon { get; set; }
    [Parameter] public EventCallback OnAction { get; set; }
}
