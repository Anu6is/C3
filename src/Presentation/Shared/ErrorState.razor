<MudPaper Class="pa-8 d-flex flex-column align-center" Elevation="0">
    <MudIcon Icon="@Icons.Material.Filled.ErrorOutline"
             Size="Size.Large" Color="Color.Error" Class="mb-4" />
    <MudText Typo="Typo.h5" Align="Align.Center" Class="mb-2">
        @Title
    </MudText>
    <MudText Typo="Typo.body1" Align="Align.Center" Color="Color.Secondary" Class="mb-4">
        @Message
    </MudText>
    @if (OnRetry.HasDelegate)
    {
        <MudButton Variant="Variant.Filled" Color="Color.Primary"
                   OnClick="OnRetry" StartIcon="@Icons.Material.Filled.Refresh">
            Try Again
        </MudButton>
    }
</MudPaper>

@code {
    [Parameter] public string Title { get; set; } = "Something went wrong";
    [Parameter] public string Message { get; set; } = string.Empty;
    [Parameter] public EventCallback OnRetry { get; set; }
}
